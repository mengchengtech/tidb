go_test(
    name = "ddl_test",
    timeout = "short",
    srcs = [
        "ddl_extension_visitor_test.go",
        "main_test.go",
    ],
    embed = [":ddl"],
    flaky = True,
    deps = [
        "//mctech/mock",
        "//parser",
        "//parser/format",
        "//parser/test_driver",
        "@com_github_pingcap_failpoint//:failpoint",
        "@com_github_stretchr_testify//require",
    ],
