load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "ddl",
    srcs = [
        "ddl_extension_visitor.go",
        "util.go",
    ],
    importpath = "github.com/pingcap/tidb/mctech/ddl",
    visibility = ["//visibility:public"],
    deps = [
        "//config",
        "//mctech",
        "//parser/ast",
        "//parser/format",
        "//parser/model",
        "//parser/mysql",
        "//parser/types",
        "@com_github_pingcap_failpoint//:failpoint",
        "@org_golang_x_exp//slices",
    ],
